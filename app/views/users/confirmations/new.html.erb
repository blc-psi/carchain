<div class="well col-md-12">
  <div class="col-md-6">
    <h2>Resend confirmation instructions</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-horizontal"  }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: "col-md-3 control-label" %>
        <div class="col-md-9">
          <%= f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= f.submit "Resend confirmation instructions", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
