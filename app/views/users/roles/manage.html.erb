<div class="col-md-12 well">
  <div class="col-md-12">
    <h2>
      Manage user #<%= @user.id %> roles:
    </h2>
    <div class="col-md-6">
      <p>
        E-Mail: <%= @user.email %>
      </p>
      <p>
        Firstname: <%= @user.firstname %>
      </p>
      <p>
        Lastname: <%= @user.lastname %>
      </p>
    </div>
  </div>

  <div class="col-md-12">
    <h4>
        User roles:
    </h4>
    <div class="col-md-6">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Role</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% @user.roles.each do |role| %>
          <tr>
            <td><%= role.name %></td>
            <td>
              <%= link_to "X", users_roles_destroy_path(@user, role), class: "btn btn-sm btn-danger", method: :delete, data:{comfirm: 'Are you sure?'} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-12">
    <div class="col-md-6">
      <%= form_for(:user, as: :post, url: users_roles_add_path(@user), html: { class: "form-horizontal" }) do |f| %>
        <%= f.fields_for :roles do |roles_form| %>
          <div class="form-group">
            <%= roles_form.label :name, :role, class: "col-md-2 control-label" %>
            <div class="col-md-8">
              <%= roles_form.text_field :name, required: true, class: "form-control", placeholder: "New role" %>
            </div>
          </div>
        <% end %>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-8">
            <%= f.submit "Add role", class: "btn btn-primary btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
