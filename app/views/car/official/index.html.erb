<div class="col-lg-12 well">
<h2>
  Übersicht über Ihre Anträge
</h2>
  <div class="table-responsive">
    <% if @table_data.empty? %>
      <p> Es liegen keine Anträge vor.</p>
    <% else %>
      <table class="table table-striped table-hover ">
        <thead>
        <tr>
          <th>#</th>
          <th>Referenz</th>
          <th>Halter</th>
          <th>Status</th>
          <th>Datum</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @table_data.each_with_index do |registration, i| %>
          <tr class="<%= registration[:status][:class] %>">
            <td><%= i+1 %></td>
            <td><span class="hash-value"><%= registration[:reference] %></span></td>
            <td><%= registration[:owner] %></td>
            <td><%= registration[:status][:text] %></td>
            <td><%= registration[:time] %></td>
            <td>
              <div class="btn-group">
                <a href="#" class="btn btn-primary btn-xs dropdown-toggle btn-block" data-toggle="dropdown"><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li> <%= link_to "Details", car_registration_details_path(registration[:id]) %></li>
                  <li><%= link_to "Abmelden", car_registration_end_registration_path %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>

  </div>
</div>
