<div class="well">
  <h2 class="col-lg-offset-4">
    <%= _('Query vehicle data') %>
  </h2>
  <div>
  <%= form_tag car_police_search_for_owner_path, method: :get, class: "form-horizontal" do %>
    <fieldset>
      <div class="form-group">
        <%= label_tag 'license_tag', "Kennzeichen", class: 'col-lg-4 control-label' %>
        <div class="col-lg-4">
          <%= text_field_tag 'license_tag', nil, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-4 col-lg-4">
          <button type="submit" class="btn btn-primary btn-block"><%= _('Search') %></button>
        </div>
      </div>
    </fieldset>
  <% end %>
  </div>
</div>
