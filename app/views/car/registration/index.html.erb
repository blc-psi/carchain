<div class="col-lg-12 well">
<h2>
  Übersicht über ihre KFZ-Historie <%= current_user.email %>
</h2>
<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>#</th>
    <th>Referenz</th>
    <th>Status</th>
    <th>Datum</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @table_data.each_with_index do |registration, i| %>
    <tr class="<%= registration[:status][:class] %>">
      <td><%= i+1 %></td>
      <td><samp><%= registration[:reference] %></samp></td>
      <td><%= registration[:status][:text] %></td>
      <td><%= registration[:time] %></td>
      <td>
        <div class="btn-group">
          <a href="#" class="btn btn-primary btn-xs dropdown-toggle btn-block" data-toggle="dropdown"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Bestätigen", car_registration_change_registration_path %></li>
            <li><%= link_to "Abmelden", car_registration_end_registration_path %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
