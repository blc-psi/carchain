<div class="col-lg-12 well">
<h2>
  Übersicht über Ihre Anträge
</h2>
  <div class="table-responsive">
    <% if @table_data.empty? %>
      <p> Es liegen noch keine Anträge vor.</p>
       <%= link_to "KFZ Anmelden", car_registration_register_path, class: "btn btn-md btn-primary" %>
    <% else %>
      <table class="table table-striped table-hover ">
        <thead>
        <tr>
          <th>#</th>
          <th>Referenz</th>
          <th>Halter</th>
          <th>Status</th>
          <th>Datum</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @table_data.each_with_index do |registration, i| %>
          <tr class="<%= registration[:status][:class] %>">
            <td><%= i+1 %></td>
            <td><span class="hash-value"><%= registration[:reference] %></span></td>
            <td><%= registration[:owner] %></td>
            <td><%= registration[:status][:text] %></td>
            <td><%= registration[:time] %></td>
            <td>
              <li> <%= link_to "Details", car_registration_details_path(registration[:id]), class: 'btn btn-xs btn-primary' %></li>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>

  </div>
</div>
