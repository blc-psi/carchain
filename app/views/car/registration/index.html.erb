<div class="col-lg-12 well">
<h2>
  <%= _('Overview of your registrations') %>
</h2>
  <div class="table-responsive">
    <% if @table_data.empty? %>
      <p> Es liegen noch keine Antr√§ge vor.</p>
       <%= link_to "KFZ Anmelden", car_registration_register_path, class: "btn btn-md btn-primary" %>
    <% else %>
      <table class="table table-striped table-hover ">
        <thead>
        <tr>
          <th>#</th>
          <th><%= _('Reference') %></th>
          <th><%= _('License') %></th>
          <th><%= _('Owner') %></th>
          <th><%= _('Status') %></th>
          <th><%= _('Date') %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @table_data.each_with_index do |registration, i| %>
          <tr class="<%= registration[:status][:class] %>">
            <td><%= i+1 %></td>
            <td><span class="hash-value"><%= registration[:reference] %></span></td>
            <td><%= registration[:license_tag] %></td>
            <td><%= registration[:owner] %></td>
            <td><%= registration[:status][:text] %></td>
            <td><%= registration[:time] %></td>
            <td>
              <%= link_to _("Details"), car_registration_details_path(registration[:id]), class: 'btn btn-xs btn-primary' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>

  </div>
</div>
