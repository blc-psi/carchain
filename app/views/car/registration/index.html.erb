<div class="col-lg-12 well">
<h2>
  Übersicht über ihre KFZ-Historie <%= current_user.email %>
</h2>
<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>#</th>
    <th>KFZ</th>
    <th>Status</th>
    <th>Datum</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @registrations.each do |registration| %>

    <tr>
      <td><%= registration.id %></td>
      <td></td>
      <td></td>
      <td><%= registration.updated_at %></td>
      <td>
        <div class="btn-group">
          <a href="#" class="btn btn-primary btn-xs dropdown-toggle btn-block" data-toggle="dropdown"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Anmelden", car_registration_register_path %></li>
            <li><%= link_to "Ummelden", car_registration_change_registration_path %></li>
            <li><%= link_to "Abmelden", car_registration_end_registration_path %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
