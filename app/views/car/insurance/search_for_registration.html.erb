<div class="well">
  <h2>
    Suchen nach dem Status eines KFZ-Halters
  </h2>
  <form class="form-horizontal">
    <fieldset>
      <legend>Halterdaten</legend>
      <div class="form-group">
        <label for="inputName" class="col-lg-2 control-label">Vorname</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Vorname">
        </div>
      </div>

      <div class="form-group">
        <label for="inputLastname" class="col-lg-2 control-label">Nachname</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Nachname">
        </div>
      </div>
      <div class="form-group">
        <label for="inputName" class="col-lg-2 control-label">Straße</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Straße & Haus-Nr.">
        </div>
      </div>
      <div class="form-group">
        <label for="inputLastname" class="col-lg-2 control-label">Postleitzahl</label>
        <div class="col-lg-10">
          <input type="number" class="form-control" placeholder="PLZ">
        </div>
      </div>
      <div class="form-group">
        <label for="inputName" class="col-lg-2 control-label">Stadt</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" placeholder="Stadt">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-1 col-lg-9 col-md-8">
          <button type="reset" class="btn btn-danger">Abbrechen</button>
          <button type="submit" class="btn btn-primary">Halterdaten anzeigen</button>
        </div>
      </div>
    </fieldset>
  </form>

  <table class="table table-striped table-hover ">
    <thead>
    <tr>
      <th>#</th>
      <th>KFZ</th>
      <th>Status</th>
      <th>Datum</th>
    </tr>
    </thead>
    <tbody>
    <tr class="success">
      <td>1</td>
      <td>Auto Bezeichnung</td>
      <td>Angemeldet</td>
      <td>Angemeldet seit</td>
    </tr>
    <tr class="success">
      <td>2</td>
      <td>Auto Bezeichnung</td>
      <td>Angemeldet</td>
      <td>Angemeldet seit</td>
    </tr>
    <tr class="success">
      <td>3</td>
      <td>Auto Bezeichnung</td>
      <td>Angemeldet</td>
      <td>Angemeldet seit</td>
    </tr>
    </tbody>
  </table>
  <div class="row col-centered">
    <button type="" class="col-lg-offset-10 col-lg-2 btn btn-primary">Halterdaten exportieren</button>
  </div>

</div>